@using ProjektAplikacjaBudowlanka.Models.AuthenticationModels
@model RegisterModel

<h2>Rejestracja</h2>
<form method="post" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Login" class="control-label"></label>
        <span id="LoginSpan" class="text-danger">@ViewData["LoginSpan"]</span>
        <input asp-for="Login" class="form-control" />
       
    </div>

    <div class="form-group">
        <label asp-for="Haslo" class="control-label"></label>
        <span id="HasloSpan" class="text-danger">@ViewData["HasloSpan"]</span>
        <input asp-for="Haslo" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rodzaj"></label>
        <select id="Rodzaj" asp-for="Rodzaj" class="form-control">
            <option value="Klient">Klient</option>
            <option value="Firma">Firma</option>
        </select>
    </div>

    <div id="klientFields" style="display:none;">
        <div class="form-group">
            <label asp-for="Imie"></label>
            <span id="ImieSpan" class="text-danger">@ViewData["ImieSpan"]</span>
            <input asp-for="Imie" class="form-control" />
           
        </div>

        <div class="form-group">
            <label asp-for="Nazwisko"></label>
            <span id="NazwiskoSpan" class="text-danger">@ViewData["NazwiskoSpan"]</span>
            <input asp-for="Nazwisko" class="form-control" />
        </div>
    </div>

    <div id="firmaFields" style="display:none;">
        <div class="form-group">
            <label asp-for="NazwaFirmy"></label>
            <span id="NazwaFirmySpan" class="text-danger">@ViewData["NazwaFirmySpan"]</span>
            <input asp-for="NazwaFirmy" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="NIP"></label>
            <span id="NIPSpan" class="text-danger">@ViewData["NIPSpan"]</span>
            <input asp-for="NIP" class="form-control" />
            <span asp-validation-for="NIP" class="text-danger"></span>
        </div>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Zarejestruj</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#Rodzaj").change(function () {
                var userType = $("#Rodzaj").val();
                if (userType == "Klient") {
                    $("#klientFields").show();
                    $("#firmaFields").hide();
                   
                } else {
                    $("#klientFields").hide();
                    $("#firmaFields").show();
                }
            });
        });
    </script>
}
